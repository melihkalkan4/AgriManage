@model AgriManage.DataAccess.Models.Ekipman

@{
    ViewData["Title"] = "Yeni Ekipman Ekle";
}

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-warning text-dark py-3">
            <h4 class="mb-0"><i class="fa-solid fa-tractor me-2"></i>Yeni Ekipman Kaydı</h4>
        </div>
        <div class="card-body bg-light">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Ad" class="form-label fw-bold">Ekipman Adı</label>
                        <input asp-for="Ad" class="form-control" placeholder="Örn: Traktör 5050E" />
                        <span asp-validation-for="Ad" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Marka" class="form-label fw-bold">Marka</label>
                        <input asp-for="Marka" class="form-control" />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Model" class="form-label fw-bold">Model Yılı</label>
                        <input asp-for="Model" class="form-control" />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Kategori</label>
                        <select asp-for="EkipmanKategorisiId" class="form-select" asp-items="ViewBag.EkipmanKategorisiId">
                            <option value="">-- Kategori Seç --</option>
                        </select>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="SeriNo" class="form-label fw-bold">Seri No</label>
                        <input asp-for="SeriNo" class="form-control" />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Durum</label>
                        <select asp-for="EkipmanDurumuId" class="form-select" asp-items="ViewBag.EkipmanDurumuId">
                            <option value="">-- Durum Seç --</option>
                        </select>
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-warning px-4 shadow-sm">
                        <i class="fa-solid fa-save me-2"></i>Kaydet
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}