@using Microsoft.AspNetCore.Identity
@using AgriManage.DataAccess.Models
@using AgriManage.DataAccess.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AgriManage</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AgriManage.styles.css" asp-append-version="true" />

    <style>
        @@media all and (min-width: 992px) {
            .navbar .nav-item:hover > .dropdown-menu

        {
            display: block;
            margin-top: 0;
        }

        .dropdown-menu .dropend {
            position: relative;
        }

            .dropdown-menu .dropend:hover > .dropdown-menu {
                display: block;
                position: absolute;
                top: 0;
                left: 100%;
                margin-top: -5px;
            }

        }

        .navbar-brand {
            font-size: 1.5rem;
            letter-spacing: 1px;
        }

        .nav-link {
            font-weight: 500;
            transition: color 0.3s;
        }

        .dropdown-item i {
            width: 20px;
            text-align: center;
        }

        .bg-dark-custom {
            background-color: #1a1a1a !important;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark-custom border-bottom shadow-sm mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-success" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-tractor"></i> AgriManage
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Index">
                                <i class="fa-solid fa-house me-1"></i> Ana Sayfa
                            </a>
                        </li>

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item dropdown ms-lg-2">
                                <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fa-solid fa-layer-group text-warning me-1"></i> Yönetim Menüleri
                                </a>
                                <ul class="dropdown-menu shadow-lg">

                                    <li class="dropend">
                                        <a class="dropdown-item dropdown-toggle" href="#">
                                            <i class="fa-solid fa-wheat-awn text-success me-2"></i> Tarım Sahaları
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" asp-controller="Tarla" asp-action="Index">Tarlalarım</a></li>
                                            <li><a class="dropdown-item" asp-controller="Sera" asp-action="Index">Seralarım</a></li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li><a class="dropdown-item" asp-controller="Tarla" asp-action="Create">Yeni Tarla Ekle</a></li>
                                            <li><a class="dropdown-item" asp-controller="Sera" asp-action="Create">Yeni Sera Ekle</a></li>
                                        </ul>
                                    </li>

                                    <li class="dropend">
                                        <a class="dropdown-item dropdown-toggle" href="#">
                                            <i class="fa-solid fa-users text-danger me-2"></i> Personel & Vardiya
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" asp-controller="Personel" asp-action="Index">Personel Listesi</a></li>
                                            <li><a class="dropdown-item" asp-controller="Vardiya" asp-action="Program">Vardiya Çizelgesi</a></li>
                                            @if (User.IsInRole("Admin"))
                                            {
                                                <li><hr class="dropdown-divider"></li>
                                                <li><a class="dropdown-item fw-bold" asp-controller="Vardiya" asp-action="Ata">Vardiya Ata</a></li>
                                                <li><a class="dropdown-item" asp-controller="Personel" asp-action="GorevAta">Görev Ata</a></li>
                                            }
                                        </ul>
                                    </li>

                                    <li class="dropend">
                                        <a class="dropdown-item dropdown-toggle" href="#">
                                            <i class="fa-solid fa-screwdriver-wrench text-info me-2"></i> Ekipman & Bakım
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" asp-controller="Ekipman" asp-action="Index">Envanter</a></li>
                                            <li><a class="dropdown-item" asp-controller="Bakim" asp-action="Index">Bakım Kayıtları</a></li>
                                            @if (User.IsInRole("Admin"))
                                            {
                                                <li><hr class="dropdown-divider"></li>
                                                <li><a class="dropdown-item" asp-controller="Ekipman" asp-action="Create">Yeni Ekipman</a></li>
                                            }
                                        </ul>
                                    </li>

                                    <li class="dropend">
                                        <a class="dropdown-item dropdown-toggle" href="#">
                                            <i class="fa-solid fa-boxes-stacked text-primary me-2"></i> Stok & Lojistik
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a class="dropdown-item fw-bold" asp-controller="Envanter" asp-action="Index" asp-route-tarlaId="0">
                                                    <i class="fa-solid fa-warehouse text-success me-2"></i> Merkez Depo & Satın Alma
                                                </a>
                                            </li>

                                            <li><hr class="dropdown-divider"></li>

                                            <li><a class="dropdown-item" asp-controller="Stok" asp-action="Dashboard"><i class="fa-solid fa-chart-pie me-2"></i>Stok Analizi</a></li>
                                        </ul>
                                    </li>

                                    <li><hr class="dropdown-divider"></li>

                                    <li><a class="dropdown-item" asp-controller="Gorev" asp-action="Index"><i class="fa-solid fa-list-check me-2"></i>İş Emirleri</a></li>
                                    <li><a class="dropdown-item" asp-controller="Talep" asp-action="Index"><i class="fa-solid fa-file-signature me-2"></i>Talepler</a></li>

                                    @if (User.IsInRole("ZiraatMuhendisi") || User.IsInRole("Admin"))
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item fw-bold text-warning" asp-controller="Muhendis" asp-action="Panel"><i class="fa-solid fa-user-doctor me-2"></i>Mühendis Paneli</a></li>
                                    }
                                </ul>
                            </li>

                            <li class="nav-item ms-lg-2">
                                <a class="nav-link text-white" asp-controller="Home" asp-action="Analiz">
                                    <i class="fa-solid fa-chart-line me-1"></i> Analizler
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fa-solid fa-user-circle me-1"></i> @User.Identity?.Name
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <span class="badge bg-danger ms-1" style="font-size: 0.6rem;">ADMIN</span>
                                    }
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index"><i class="fa-solid fa-gear"></i> Ayarlar</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                            <button type="submit" class="dropdown-item text-danger fw-bold"><i class="fa-solid fa-right-from-bracket"></i> Çıkış Yap</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">
                                    <i class="fa-solid fa-right-to-bracket"></i> Giriş Yap
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid flex-grow-1 px-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-auto py-3 bg-light shadow-sm">
        <div class="container text-center">
            &copy; @DateTime.Now.Year - <span class="fw-bold text-success">AgriManage</span> - <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Gizlilik</a>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>