@using Microsoft.AspNetCore.Identity
@using AgriManage.DataAccess.Models
@* 👆 ApplicationUser'ın olduğu namespace'i ekledik *@

@* 👇 ESKİSİ: @inject SignInManager<IdentityUser> SignInManager *@
@* 👇 YENİSİ: ApplicationUser kullanmalısın *@
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item dropdown">
            <a id="manage" class="nav-link text-white dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                <i class="fa-solid fa-user-circle me-1"></i> @UserManager.GetUserName(User)
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
                <li>
                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                        <i class="fa-solid fa-gear me-2"></i>Hesap Ayarları
                    </a>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button id="logout" type="submit" class="dropdown-item text-danger fw-bold">
                            <i class="fa-solid fa-right-from-bracket me-2"></i>Çıkış Yap
                        </button>
                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" id="login" asp-area="Identity" asp-page="/Account/Login">
                <i class="fa-solid fa-right-to-bracket me-1"></i>Giriş Yap
            </a>
        </li>
    }
</ul>