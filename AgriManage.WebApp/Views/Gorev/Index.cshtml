@model IEnumerable<AgriManage.DataAccess.Models.Gorev>

@{
    ViewData["Title"] = "İş Emirleri";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-dark"><i class="fa-solid fa-list-check me-2"></i>İş Emirleri Listesi</h3>
        <a asp-action="Create" class="btn btn-primary rounded-pill"><i class="fa-solid fa-plus me-2"></i>Yeni Görev Ata</a>
    </div>

    <div class="card shadow border-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Tarih</th>
                        <th>Başlık</th>
                        <th>Personel</th>
                        <th>Ekipman / Stok</th>
                        <th>Durum</th>
                        <th class="text-end pe-4">İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr><td colspan="6" class="text-center py-4 text-muted">Henüz kayıtlı iş emri yok.</td></tr>
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">@item.PlanlananBaslangic.ToString("dd.MM.yyyy")</td>
                            <td class="fw-bold">@item.Baslik</td>
                            <td>@(item.Personel != null ? item.Personel.SicilNo : "-")</td>
                            <td>
                                @if (item.Ekipman != null)
                                {
                                    <div><i class="fa-solid fa-tractor text-secondary me-1"></i>@item.Ekipman.Ad</div>
                                }
                                @if (item.StokItem != null)
                                {
                                    <div class="small text-muted"><i class="fa-solid fa-box-open me-1"></i>@item.StokItem.Ad</div>
                                }
                            </td>
                            <td>
                                @if (item.GorevDurumuId == 3)
                                {
                                    <span class="badge bg-success">Tamamlandı</span>
                                }
                                else
                                {

                                    <span class="badge bg-warning text-dark">Bekliyor</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                @if (item.GorevDurumuId != 3)
                                {
                                    <form asp-action="GoreviTamamla" asp-route-id="@item.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-success" title="Tamamla"><i class="fa-solid fa-check"></i></button>
                                    </form>
                                }
                                else
                                {
                                    <i class="fa-solid fa-check-double text-success"></i>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>