@using AgriManage.BusinessLogic.Dtos
@model AnalizDto

@{
    ViewData["Title"] = "Genel Bakış";
}

@if (!User.Identity.IsAuthenticated)
{
    <div class="text-center mt-5">
        <div class="p-5 mb-4 bg-light rounded-3 shadow-sm">
            <h1 class="display-4 fw-bold text-success">AgriManage'a Hoş Geldiniz</h1>
            <p class="lead text-muted">Tarla yönetim sistemine giriş yapınız.</p>
            <hr class="my-4">
            <p>Tarlalarınızı kayıt altına alın, lokasyon bazlı analiz yapın.</p>
            <a href="/Identity/Account/Login" class="btn btn-primary btn-lg px-4 gap-3">Giriş Yap</a>
            <a href="/Identity/Account/Register" class="btn btn-outline-secondary btn-lg px-4">Kayıt Ol</a>
        </div>
    </div>
}
else
{
    <div class="container-fluid py-4">

        <div class="row g-3 mb-4">
            <div class="col-xl-3 col-sm-6">
                <div class="card shadow-sm border-0 border-start border-4 border-primary h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <p class="text-muted mb-1 small text-uppercase fw-bold">Toplam Personel</p>
                                <h4 class="mb-0 fw-bold text-dark">@Model.ToplamPersonel</h4>
                            </div>
                            <div class="icon-shape bg-primary bg-opacity-10 text-primary p-3 rounded">
                                <i class="fa-solid fa-users fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-sm-6">
                <div class="card shadow-sm border-0 border-start border-4 border-success h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <p class="text-muted mb-1 small text-uppercase fw-bold">Toplam Arazi</p>
                                <h4 class="mb-0 fw-bold text-dark">@Model.ToplamArazi <small class="text-muted fs-6">dönüm</small></h4>
                            </div>
                            <div class="icon-shape bg-success bg-opacity-10 text-success p-3 rounded">
                                <i class="fa-solid fa-ruler-combined fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-sm-6">
                <div class="card shadow-sm border-0 border-start border-4 border-info h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <p class="text-muted mb-1 small text-uppercase fw-bold">Aktif Görevler</p>
                                <h4 class="mb-0 fw-bold text-dark">@Model.AktifGorevSayisi</h4>
                            </div>
                            <div class="icon-shape bg-info bg-opacity-10 text-info p-3 rounded">
                                <i class="fa-solid fa-clipboard-list fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-sm-6">
                <div class="card shadow-sm border-0 border-start border-4 border-warning h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <p class="text-muted mb-1 small text-uppercase fw-bold">Bugün Çalışan</p>
                                <h4 class="mb-0 fw-bold text-dark">@Model.BugunkuVardiya</h4>
                            </div>
                            <div class="icon-shape bg-warning bg-opacity-10 text-warning p-3 rounded">
                                <i class="fa-solid fa-clock fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4 mb-4">

            <div class="col-lg-6">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                        <h6 class="m-0 fw-bold text-dark"><i class="fa-solid fa-list text-success me-2"></i>Arazi Listesi</h6>
                        <a asp-controller="Tarla" asp-action="Index" class="btn btn-sm btn-outline-secondary">Tümü</a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="tblTarlalar" class="table table-hover align-middle mb-0" style="width:100%">
                                <thead class="table-light">
                                    <tr>
                                        <th>Tarla Adı</th>
                                        <th class="text-end">Büyüklük (Dönüm)</th>
                                        <th class="text-center">Durum</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.TarlaIsimleri != null && Model.TarlaIsimleri.Any())
                                    {
                                        @for (int i = 0; i < Model.TarlaIsimleri.Count; i++)
                                        {
                                            <tr>
                                                <td class="fw-bold text-secondary">@Model.TarlaIsimleri[i]</td>
                                                <td class="text-end">@Model.TarlaAlanlari[i]</td>
                                                <td class="text-center">
                                                    <span class="badge bg-success bg-opacity-10 text-success px-3">Aktif</span>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                        <h6 class="m-0 fw-bold text-dark"><i class="fa-solid fa-user-group text-primary me-2"></i>Personel Durumu</h6>
                        <a asp-controller="Personel" asp-action="Index" class="btn btn-sm btn-outline-secondary">Tümü</a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="tblPersonel" class="table table-hover align-middle mb-0" style="width:100%">
                                <thead class="table-light">
                                    <tr>
                                        <th>Personel Adı</th>
                                        <th class="text-center">Bitirilen Görev</th>
                                        <th class="text-end">Performans</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.PersonelAdlari != null && Model.PersonelAdlari.Any())
                                    {
                                        @for (int i = 0; i < Model.PersonelAdlari.Count; i++)
                                        {
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <div class="avatar bg-light rounded-circle text-primary me-2 d-flex align-items-center justify-content-center" style="width:32px; height:32px;">
                                                            <i class="fa-solid fa-user small"></i>
                                                        </div>
                                                        <span class="fw-bold text-dark">@Model.PersonelAdlari[i]</span>
                                                    </div>
                                                </td>
                                                <td class="text-center">@Model.TamamlananGorevler[i]</td>
                                                <td class="text-end">
                                                    <div class="d-flex align-items-center justify-content-end">
                                                        <span class="me-2 small text-muted">%@(Model.TamamlananGorevler[i] * 4)</span>
                                                        <div class="progress" style="width: 50px; height: 4px;">
                                                            <div class="progress-bar bg-primary" role="progressbar" style="width: @(Model.TamamlananGorevler[i] * 4)%"></div>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-5">
            <div class="col-md-6">
                <div class="card shadow border-0 h-100">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0 text-secondary"><i class="fa-solid fa-chart-line"></i> Mali Durum (Özet)</h5>
                    </div>
                    <div class="card-body">
                        <div style="height: 250px;">
                            <canvas id="homeFinansChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card shadow border-0 h-100">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0 text-secondary"><i class="fa-solid fa-medal"></i> Ayın Personelleri</h5>
                    </div>
                    <div class="card-body">
                        <div style="height: 250px;">
                            <canvas id="homePersonelChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
}

@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            // --- TABLO AYARLARI ---
            var tabloAyarlari = {
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json" // Türkçe Yapılandırma
                },
                "pageLength": 5,        // Sayfada 5 kayıt göster
                "lengthChange": false,  // Kayıt sayısı değiştirme kutusunu gizle
                "searching": true,      // Arama özelliği AÇIK
                "ordering": true,       // Sıralama özelliği AÇIK
                "info": false           // Bilgi metnini gizle
            };

            // Tabloları DataTables'a dönüştür
            $('#tblTarlalar').DataTable(tabloAyarlari);
            $('#tblPersonel').DataTable(tabloAyarlari);
        });

        // --- GRAFİKLER ---

        // 1. Finansal Grafik
        const ctxFinans = document.getElementById('homeFinansChart');
        if (ctxFinans) {
            new Chart(ctxFinans, {
                type: 'line',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.Aylar)),
                    datasets: [
                        {
                            label: 'Gelir',
                            data: @Html.Raw(Json.Serialize(Model.Gelirler)),
                            borderColor: '#198754', tension: 0.4, fill: false
                        },
                        {
                            label: 'Gider',
                            data: @Html.Raw(Json.Serialize(Model.Giderler)),
                            borderColor: '#dc3545', tension: 0.4, fill: false
                        }
                    ]
                },
                options: { responsive: true, maintainAspectRatio: false }
            });
        }

        // 2. Personel Grafik
        const ctxPersonel = document.getElementById('homePersonelChart');
        if (ctxPersonel) {
            new Chart(ctxPersonel, {
                type: 'bar',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.PersonelAdlari)),
                    datasets: [{
                        label: 'Tamamlanan Görev',
                        data: @Html.Raw(Json.Serialize(Model.TamamlananGorevler)),
                        backgroundColor: '#0dcaf0', borderRadius: 5
                    }]
                },
                options: {
                    indexAxis: 'y',
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } }
                }
            });
        }
    </script>
}