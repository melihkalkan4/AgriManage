@model AgriManage.DataAccess.Models.AnalizViewModel

@{
    ViewData["Title"] = "Analiz Merkezi";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-light text-secondary"><i class="fa-solid fa-chart-line me-2"></i>Analiz Merkezi</h2>
            <p class="text-muted mb-0">Çiftlik operasyonlarının gerçek zamanlı veri görselleştirmesi.</p>
        </div>
        <button class="btn btn-outline-primary" onclick="window.print()"><i class="fa-solid fa-print me-2"></i>Raporu Yazdır</button>
    </div>

    <div class="row g-4 mb-4">

        <div class="col-md-6">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-header bg-success text-white py-3">
                    <h6 class="mb-0 fw-bold"><i class="fa-solid fa-seedling me-2"></i>Ekili Ürün Dağılımı</h6>
                </div>
                <div class="card-body">
                    @if (Model.UrunAdlari.Any())
                    {
                        <div style="height: 300px;">
                            <canvas id="urunChart"></canvas>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted">Henüz ekim verisi bulunmuyor.</div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-header bg-warning text-dark py-3">
                    <h6 class="mb-0 fw-bold"><i class="fa-solid fa-tractor me-2"></i>Ekipman Sağlık Durumu</h6>
                </div>
                <div class="card-body">
                    @if (Model.EkipmanDurumAdlari.Any())
                    {
                        <div style="height: 300px;">
                            <canvas id="ekipmanChart"></canvas>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted">Ekipman verisi bulunmuyor.</div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h6 class="mb-0 fw-bold"><i class="fa-solid fa-users me-2"></i>Departmanlara Göre Personel Gücü</h6>
                </div>
                <div class="card-body">
                    @if (Model.DepartmanAdlari.Any())
                    {
                        <div style="height: 350px;">
                            <canvas id="personelChart"></canvas>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted">Personel verisi bulunmuyor.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // --- 1. ÜRÜN GRAFİĞİ ---
    const urunCtx = document.getElementById('urunChart');
    if (urunCtx) {
        new Chart(urunCtx, {
            type: 'pie',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.UrunAdlari)),
                datasets: [{
                    data: @Html.Raw(Json.Serialize(Model.UrunAlanlari)),
                    backgroundColor: ['#198754', '#20c997', '#ffc107', '#0dcaf0', '#d63384'],
                    borderWidth: 1
                }]
            },
            options: { responsive: true, maintainAspectRatio: false }
        });
    }

    // --- 2. EKİPMAN GRAFİĞİ ---
    const ekipmanCtx = document.getElementById('ekipmanChart');
    if (ekipmanCtx) {
        new Chart(ekipmanCtx, {
            type: 'doughnut',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.EkipmanDurumAdlari)),
                datasets: [{
                    data: @Html.Raw(Json.Serialize(Model.EkipmanDurumSayilari)),
                    backgroundColor: ['#0d6efd', '#ffc107', '#dc3545'], // Mavi (Aktif), Sarı (Bakım), Kırmızı (Arıza)
                    hoverOffset: 4
                }]
            },
            options: { responsive: true, maintainAspectRatio: false }
        });
    }

    // --- 3. PERSONEL GRAFİĞİ ---
    const personelCtx = document.getElementById('personelChart');
    if (personelCtx) {
        new Chart(personelCtx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.DepartmanAdlari)),
                datasets: [{
                    label: 'Çalışan Sayısı',
                    data: @Html.Raw(Json.Serialize(Model.DepartmanPersonelSayilari)),
                    backgroundColor: '#0d6efd',
                    borderRadius: 5
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: { beginAtZero: true, ticks: { stepSize: 1 } }
                }
            }
        });
    }
</script>