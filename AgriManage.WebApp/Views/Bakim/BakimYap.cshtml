@model AgriManage.DataAccess.Models.BakimKaydi

@{
    ViewData["Title"] = "Bakım İşle";
}

<div class="container mt-4">
    <div class="card shadow border-0 col-md-8 mx-auto">
        <div class="card-header bg-warning text-dark">
            <h5 class="mb-0">Bakım Kaydı Gir</h5>
        </div>
        <div class="card-body">
            <div class="alert alert-secondary">
                <strong>@ViewBag.PlanBilgisi</strong> işlemi için kayıt giriyorsunuz.
            </div>
            <form asp-action="BakimYap">
                <input type="hidden" asp-for="BakimPlaniId" />

                <div class="mb-3">
                    <label class="form-label fw-bold">İşlem Tarihi</label>
                    <input asp-for="Tarih" type="datetime-local" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Maliyet (TL)</label>
                    <input asp-for="Maliyet" type="number" step="0.01" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Açıklama</label>
                    <textarea asp-for="Aciklama" class="form-control" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-warning w-100">Kaydet</button>
            </form>
        </div>
    </div>
</div>