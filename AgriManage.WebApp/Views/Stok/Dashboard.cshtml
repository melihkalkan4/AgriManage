@model IEnumerable<AgriManage.DataAccess.Models.StokItem>

@{
    ViewData["Title"] = "Stok Analiz Paneli";
    var sonHareketler = ViewBag.SonHareketler as IEnumerable<AgriManage.DataAccess.Models.StokHareket>;
}

<div class="container-fluid mt-4">
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white shadow-sm h-100 border-0">
                <div class="card-body">
                    <h6 class="text-white-50 text-uppercase fw-bold mb-1">Toplam Envanter Değeri</h6>
                    <h2 class="mb-0">₺ @(((decimal)ViewBag.ToplamEnvanterDegeri).ToString("N2"))</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-danger text-white shadow-sm h-100 border-0">
                <div class="card-body">
                    <h6 class="text-white-50 text-uppercase fw-bold mb-1">Kritik Seviye Uyarısı</h6>
                    <h2 class="mb-0">@ViewBag.KritikStokSayisi <small class="fs-6">Ürün</small></h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white shadow-sm h-100 border-0">
                <div class="card-body">
                    <h6 class="text-white-50 text-uppercase fw-bold mb-1">Toplam Kalem</h6>
                    <h2 class="mb-0">@ViewBag.ToplamKalemSayisi</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0 text-danger fw-bold"><i class="fa-solid fa-triangle-exclamation me-2"></i>Acil Sipariş Gerekenler</h5>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr><th>Ürün</th><th>Mevcut</th><th>Kritik Eşik</th><th>Fark</th></tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Where(x => x.Miktar <= x.KritikStokSeviyesi))
                            {
                                <tr>
                                    <td class="fw-bold">@item.Ad</td>
                                    <td class="text-danger fw-bold">@item.Miktar</td>
                                    <td>@item.KritikStokSeviyesi</td>
                                    <td><span class="badge bg-danger">-@(item.KritikStokSeviyesi - item.Miktar)</span></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0 text-primary fw-bold"><i class="fa-solid fa-clock-rotate-left me-2"></i>Son Depo Hareketleri</h5>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr><th>Tarih</th><th>Ürün</th><th>İşlem</th><th>Miktar</th></tr>
                        </thead>
                        <tbody>
                            @if (sonHareketler != null)
                            {
                                @foreach (var har in sonHareketler)
                                {
                                    <tr>
                                        <td>@har.Tarih.ToString("dd.MM HH:mm")</td>
                                        <td>@har.StokItem?.Ad</td>
                                        <td>
                                            @if (har.IslemTipi == "Giris")
                                            {
                                                <span class="badge bg-success bg-opacity-10 text-success">Giriş</span>
                                            }
                                            else
                                            {

                                                <span class="badge bg-warning bg-opacity-10 text-dark">Çıkış</span>
                                            }
                                        </td>
                                        <td class="fw-bold">@har.Miktar @har.StokItem?.Birim</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>