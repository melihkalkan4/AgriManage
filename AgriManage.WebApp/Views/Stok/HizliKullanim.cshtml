@{
    ViewData["Title"] = "Gübre/İlaç Kullanımı";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0 fw-bold"><i class="fa-solid fa-flask me-2"></i>Tarlaya Ürün Girişi</h5>
                </div>
                <div class="card-body p-4">

                    @if (TempData["hata"] != null)
                    {
                        <div class="alert alert-danger">@TempData["hata"]</div>
                    }

                    <form asp-action="HizliKullanim" method="post">

                        <div class="mb-3">
                            <label class="form-label fw-bold">Uygulanacak Tarla</label>
                            <select name="TarlaId" class="form-select form-select-lg" asp-items="ViewBag.Tarlalar" required>
                                <option value="">-- Tarla Seçiniz --</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Kullanılacak Malzeme (Gübre/İlaç)</label>
                            <select name="StokItemId" class="form-select" asp-items="ViewBag.Stoklar" required>
                                <option value="">-- Stoktan Seçiniz --</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Miktar</label>
                            <input type="number" step="0.01" name="Miktar" class="form-control" placeholder="Örn: 50" required />
                            <div class="form-text">Depodaki birim cinsinden giriniz (KG/LT).</div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Açıklama</label>
                            <textarea name="Aciklama" class="form-control" rows="2" placeholder="Örn: 2. Gübreleme yapıldı"></textarea>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg fw-bold">
                                <i class="fa-solid fa-check me-2"></i>Stoktan Düş ve Kaydet
                            </button>
                            <a asp-controller="Tarla" asp-action="Index" class="btn btn-light">İptal</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>