@model AgriManage.DataAccess.Models.Personel

@{
    ViewData["Title"] = "Personel Düzenle";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fa-solid fa-user-pen me-2"></i> Personel Bilgilerini Güncelle</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ApplicationUserId" />

                        <div class="mb-3">
                            <label class="form-label fw-bold small text-muted">Kullanıcı (Değiştirilemez)</label>
                            <input class="form-control bg-light" value="@Model.ApplicationUser?.TamAd (@Model.ApplicationUser?.Email)" disabled />
                        </div>

                        <div class="mb-3">
                            <label asp-for="SicilNo" class="form-label fw-bold">Sicil Numarası</label>
                            <input asp-for="SicilNo" class="form-control" />
                            <span asp-validation-for="SicilNo" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PozisyonId" class="form-label fw-bold">Pozisyon / Ünvan</label>
                            <select asp-for="PozisyonId" class="form-select" asp-items="ViewBag.PozisyonId"></select>
                            <span asp-validation-for="PozisyonId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IseBaslamaTarihi" class="form-label fw-bold">İşe Başlama Tarihi</label>
                            <input asp-for="IseBaslamaTarihi" type="date" class="form-control" />
                            <span asp-validation-for="IseBaslamaTarihi" class="text-danger small"></span>
                        </div>

                        <hr />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">Geri Dön</a>
                            <button type="submit" class="btn btn-primary px-4">Değişiklikleri Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>