@using AgriManage.BusinessLogic.Dtos
@using System.Text.Json
@model AnalizDto

@{
    ViewData["Title"] = "Analiz Merkezi";
    // Model null gelirse hata vermemesi için koruma
    var m = Model ?? new AnalizDto();
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-light text-secondary"><i class="fa-solid fa-chart-line me-2"></i>Analiz Merkezi</h2>
            <p class="text-muted mb-0">Çiftlik operasyonlarının gerçek zamanlı veri ve gelecek tahminleri.</p>
        </div>
        <button class="btn btn-outline-primary" onclick="window.print()"><i class="fa-solid fa-print me-2"></i>Raporu Yazdır</button>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white p-3 h-100 shadow-sm border-0">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="mb-0">@m.ToplamPersonel</h3>
                        <small>Toplam Personel</small>
                    </div>
                    <i class="fa-solid fa-users fa-2x opacity-50"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white p-3 h-100 shadow-sm border-0">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="mb-0">@m.ToplamArazi <small class="fs-6">Dönüm</small></h3>
                        <small>Toplam Arazi</small>
                    </div>
                    <i class="fa-solid fa-seedling fa-2x opacity-50"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark p-3 h-100 shadow-sm border-0">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="mb-0">@m.AktifGorevSayisi</h3>
                        <small>Aktif Görevler</small>
                    </div>
                    <i class="fa-solid fa-list-check fa-2x opacity-50"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white p-3 h-100 shadow-sm border-0">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="mb-0">@DateTime.Now.ToString("dd MMM")</h3>
                        <small>Bugünün Tarihi</small>
                    </div>
                    <i class="fa-regular fa-calendar-days fa-2x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-md-6">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-header bg-white py-3 border-bottom-0">
                    <h6 class="mb-0 fw-bold text-success"><i class="fa-solid fa-chart-pie me-2"></i>Arazi Dağılımı</h6>
                </div>
                <div class="card-body">
                    @if (m.TarlaIsimleri.Any())
                    {
                        <div style="height: 250px;">
                            <canvas id="tarlaChart"></canvas>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted">Henüz veri yok.</div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-header bg-white py-3 border-bottom-0">
                    <h6 class="mb-0 fw-bold text-warning"><i class="fa-solid fa-coins me-2"></i>Finansal Akış (Simülasyon)</h6>
                </div>
                <div class="card-body">
                    <div style="height: 250px;">
                        <canvas id="finansChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3 border-bottom-0">
                    <h6 class="mb-0 fw-bold text-primary"><i class="fa-solid fa-user-check me-2"></i>Personel Performans (Tamamlanan Görevler)</h6>
                </div>
                <div class="card-body">
                    @if (m.PersonelAdlari.Any())
                    {
                        <div style="height: 300px;">
                            <canvas id="personelChart"></canvas>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted">Henüz görev verisi yok.</div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <div class="card shadow-lg border-0 overflow-hidden" style="background: linear-gradient(135deg, #1f2937 0%, #111827 100%);">
                <div class="card-body text-white p-4">
                    <div class="row align-items-center">
                        <div class="col-md-4 text-center border-end border-secondary">
                            <h6 class="text-uppercase text-muted small letter-spacing-1 mb-3">Gelecek Sezon Beklenen Gelir</h6>
                            <h1 class="display-5 fw-bold text-success mb-2">
                                @m.TahminiGelecekGelir.ToString("C0")
                            </h1>
                            <span class="badge bg-success bg-opacity-25 text-success mb-3">
                                <i class="fa-solid fa-arrow-trend-up me-1"></i> Yüksek Verim Beklentisi
                            </span>

                            <hr class="border-secondary my-4 w-50 mx-auto" />

                            <h6 class="text-uppercase text-muted small">Tahmini Toplam Rekolte</h6>
                            <h3 class="fw-light mb-0">@m.TahminiToplamRekolte <span class="fs-6 text-muted">Ton</span></h3>
                        </div>

                        <div class="col-md-8 ps-md-5">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="fw-light mb-0"><i class="fa-solid fa-robot me-2 text-info"></i>Akıllı Rekolte Tahmini</h5>
                                <small class="text-muted fst-italic">Arazi verilerine göre hesaplanmıştır</small>
                            </div>

                            <div style="height: 250px;">
                                <canvas id="tahminChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // --- VERİ AKTARIMI (C# -> JS) ---
    const tarlaIsimler = @Html.Raw(JsonSerializer.Serialize(m.TarlaIsimleri));
    const tarlaAlanlar = @Html.Raw(JsonSerializer.Serialize(m.TarlaAlanlari));

    const aylar = @Html.Raw(JsonSerializer.Serialize(m.Aylar));
    const gelirler = @Html.Raw(JsonSerializer.Serialize(m.Gelirler));
    const giderler = @Html.Raw(JsonSerializer.Serialize(m.Giderler));

    const personelAd = @Html.Raw(JsonSerializer.Serialize(m.PersonelAdlari));
    const personelGorev = @Html.Raw(JsonSerializer.Serialize(m.TamamlananGorevler));

    // Yeni Tahmin Verileri
    const tahminAdlari = @Html.Raw(JsonSerializer.Serialize(m.TahminUrunAdlari));
    const tahminMiktarlari = @Html.Raw(JsonSerializer.Serialize(m.TahminUrunMiktarlari));

    // --- 1. PASTA GRAFİK (ARAZİ) ---
    const tarlaCtx = document.getElementById('tarlaChart');
    if (tarlaCtx) {
        new Chart(tarlaCtx, {
            type: 'doughnut',
            data: {
                labels: tarlaIsimler,
                datasets: [{
                    data: tarlaAlanlar,
                    backgroundColor: ['#198754', '#20c997', '#ffc107', '#0dcaf0', '#d63384'],
                    hoverOffset: 4
                }]
            },
            options: { responsive: true, maintainAspectRatio: false }
        });
    }

    // --- 2. ÇİZGİ GRAFİK (FİNANS) ---
    const finansCtx = document.getElementById('finansChart');
    if (finansCtx) {
        new Chart(finansCtx, {
            type: 'line',
            data: {
                labels: aylar,
                datasets: [
                    { label: 'Gelir', data: gelirler, borderColor: '#198754', tension: 0.3, fill: false },
                    { label: 'Gider', data: giderler, borderColor: '#dc3545', tension: 0.3, fill: false }
                ]
            },
            options: { responsive: true, maintainAspectRatio: false }
        });
    }

    // --- 3. BAR GRAFİK (PERSONEL) ---
    const personelCtx = document.getElementById('personelChart');
    if (personelCtx) {
        new Chart(personelCtx, {
            type: 'bar',
            data: {
                labels: personelAd,
                datasets: [{
                    label: 'Tamamlanan Görevler',
                    data: personelGorev,
                    backgroundColor: '#0d6efd',
                    borderRadius: 5
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: { y: { beginAtZero: true, ticks: { stepSize: 1 } } }
            }
        });
    }

    // --- 4. YATAY BAR GRAFİK (GELECEK TAHMİNİ - YENİ) ---
    const tahminCtx = document.getElementById('tahminChart');
    if (tahminCtx) {
        new Chart(tahminCtx, {
            type: 'bar',
            data: {
                labels: tahminAdlari,
                datasets: [{
                    label: 'Beklenen Üretim (Ton)',
                    data: tahminMiktarlari,
                    backgroundColor: 'rgba(54, 162, 235, 0.7)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1,
                    barThickness: 25
                }]
            },
            options: {
                indexAxis: 'y', // Grafiği yatay çevirir
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } }, // Efsaneyi gizle (Temiz görünüm)
                scales: {
                    x: {
                        grid: { color: '#374151' }, // Koyu grid çizgisi
                        ticks: { color: '#9ca3af' }
                    },
                    y: {
                        grid: { display: false },
                        ticks: { color: '#e5e7eb', font: { size: 14 } }
                    }
                }
            }
        });
    }
</script>