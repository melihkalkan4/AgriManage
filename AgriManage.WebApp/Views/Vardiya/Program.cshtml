@using AgriManage.DataAccess.Models
@model IEnumerable<PersonelVardiya>

@{
    ViewData["Title"] = "Haftalık Program";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold text-secondary">
                <i class="fa-solid fa-calendar-week me-2"></i>Vardiya Çizelgesi
            </h3>
            <p class="text-muted mb-0">Haftalık personel çalışma programı.</p>
        </div>

        @if (User.IsInRole("Admin") || User.IsInRole("ZiraatMuhendisi"))
        {
            <a asp-action="Ata" class="btn btn-success rounded-pill shadow-sm">
                <i class="fa-solid fa-plus me-2"></i>Vardiya Ata
            </a>
        }
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-secondary">
                            <tr>
                                <th class="ps-4">Personel</th>
                                <th>Tarih</th>
                                <th>Vardiya Tipi</th>
                                <th>Saatler</th>
                                <th class="text-end pe-4">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="avatar bg-primary text-white rounded-circle me-2 d-flex justify-content-center align-items-center" style="width:35px; height:35px;">
                                                <i class="fa-solid fa-user small"></i>
                                            </div>
                                            <div>
                                                <strong>@(item.Personel?.ApplicationUser?.TamAd ?? "Bilinmiyor")</strong>
                                                <div class="text-muted small">#@(item.Personel?.SicilNo ?? "-")</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @item.Tarih.ToShortDateString()
                                    </td>
                                    <td>
                                        <span class="badge bg-info text-dark">
                                            @(item.Vardiya?.Ad ?? "Tanımsız")
                                        </span>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="fa-regular fa-clock text-primary me-2"></i>
                                            @if (item.Vardiya != null)
                                            {
                                                <span>@item.Vardiya.BaslangicSaati.ToString(@"hh\:mm") - @item.Vardiya.BitisSaati.ToString(@"hh\:mm")</span>
                                            }
                                            else
                                            {
                                                <span>-</span>
                                            }
                                        </div>
                                    </td>
                                    <td class="text-end pe-4">
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <a asp-action="Duzenle" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">
                                                <i class="fa-solid fa-pen"></i>
                                            </a>
                                            <a asp-action="Sil" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                                <i class="fa-solid fa-trash"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fa-solid fa-calendar-xmark fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Henüz planlanmış bir vardiya yok.</h5>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Ata" class="btn btn-outline-success mt-2">İlk Vardiyayı Oluştur</a>
                    }
                </div>
            }
        </div>
    </div>
</div>