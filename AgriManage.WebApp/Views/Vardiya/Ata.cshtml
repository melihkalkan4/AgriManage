@model AgriManage.DataAccess.Models.PersonelVardiya
@{
    ViewData["Title"] = "Vardiya Ata";
}

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">Personele Vardiya Ata</h5>
        </div>
        <div class="card-body">
            <form asp-action="Ata">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Personel</label>
                    <select asp-for="PersonelId" class="form-select" asp-items="ViewBag.PersonelId">
                        <option value="">-- Personel Seçiniz --</option>
                    </select>
                    <span asp-validation-for="PersonelId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Vardiya Zamanı</label>
                    <select asp-for="VardiyaId" class="form-select" asp-items="ViewBag.VardiyaId">
                        <option value="">-- Vardiya Seçiniz --</option>
                    </select>
                    <span asp-validation-for="VardiyaId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Tarih</label>
                    <input asp-for="Tarih" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="Tarih" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Notlar</label>
                    <textarea asp-for="Notlar" class="form-control"></textarea>
                </div>

                <button type="submit" class="btn btn-success w-100">Kaydet</button>
            </form>
        </div>
    </div>
</div>