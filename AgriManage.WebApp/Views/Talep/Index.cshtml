@model IEnumerable<AgriManage.DataAccess.Models.Talep>

@{
    ViewData["Title"] = "Talep Merkezi";
    bool isAdmin = User.IsInRole("Admin");
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            @if (isAdmin)
            {
                <h3 class="fw-bold text-danger"><i class="fa-solid fa-list-check me-2"></i>Personel Talep Yönetimi</h3>
                <p class="text-muted mb-0">Personelden gelen izin, avans ve malzeme taleplerini yönetin.</p>
            }
            else
            {
                <h3 class="fw-bold text-primary"><i class="fa-solid fa-folder-open me-2"></i>Taleplerim</h3>
                <p class="text-muted mb-0">Taleplerinizin durumunu buradan takip edebilirsiniz.</p>
            }
        </div>

        <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm rounded-pill">
            <i class="fa-solid fa-plus me-2"></i>Yeni Talep Oluştur
        </a>
    </div>

    <div class="card shadow border-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="@(isAdmin ? "table-danger" : "table-primary")">
                    <tr>
                        <th class="ps-4">Tarih</th>
                        @if (isAdmin)
                        {
                            <th>Sicil No</th>
                        }
                        <th>Konu</th>
                        <th>Durum</th>
                        @if (isAdmin)
                        {
                            <th class="text-end pe-4">İşlemler</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center py-4 text-muted">
                                <i class="fa-solid fa-inbox fa-2x mb-2 d-block"></i>
                                Henüz bir talep yok.
                            </td>
                        </tr>
                    }

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">@item.Tarih.ToString("dd.MM.yyyy")</td>

                            @if (isAdmin)
                            {
                                <td class="fw-bold text-dark">
                                    @(item.Personel != null ? item.Personel.SicilNo : "Bilinmiyor")
                                </td>
                            }

                            <td>
                                <span class="fw-bold d-block">@item.Baslik</span>
                                <small class="text-muted">@item.Aciklama</small>
                            </td>

                            <td>
                                @if (item.DurumId == 0)
                                {
                                    <span class="badge bg-warning text-dark">Bekliyor</span>
                                }
                                else if (item.DurumId == 1)
                                {

                                    <span class="badge bg-success">Onaylandı</span>
                                }
                                else
                                {

                                    <span class="badge bg-danger">Reddedildi</span>
                                }
                            </td>

                            @if (isAdmin)
                            {
                                <td class="text-end pe-4">
                                    @if (item.DurumId == 0)
                                    {
                                        <div class="btn-group">
                                            <a asp-action="DurumDegistir" asp-route-id="@item.Id" asp-route-durumId="1" class="btn btn-sm btn-outline-success">
                                                <i class="fa-solid fa-check"></i>
                                            </a>
                                            <a asp-action="DurumDegistir" asp-route-id="@item.Id" asp-route-durumId="2" class="btn btn-sm btn-outline-danger">
                                                <i class="fa-solid fa-xmark"></i>
                                            </a>
                                        </div>
                                    }
                                    else
                                    {
                                        <i class="fa-solid fa-lock text-muted small"></i>
                                    }
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>